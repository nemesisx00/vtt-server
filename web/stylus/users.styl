.app

	& .manageUsers
		border(1px)
		margin 10px 0
		padding 10px
		width 50%
		
		& .modifyUser
			align-items center
			
			& form > .row
				margin 5px 0
				
				&:last-child
					justify-content center
					margin-top 10px
				
				& label
					margin-right 10px
					text-align right
					width 85px
				
				&.formButtons > *
					margin 0 5px
		
		& #refreshUserList
			align-self center
			margin-bottom 10px
			width 25%
		
		& .userList
			flexGrow(1)
			align-items center
			
			& hr
				width 95%
				
				&:last-child
					display none
			
			& .user
				align-items center
				
				& .userLabel
					flexGrow(1)
					cursor pointer
			
			& .deleteUser
				background url('/assets/delete.svg') no-repeat
				height 20px
				position relative
				top 1px
				left 5px
				width 20px
